<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background solid color with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0d6efd"/>
            <corners android:radius="15dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Transparent center part for glow effect -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="4dp"/>
            <solid android:color="@android:color/transparent"/>
            <padding android:top="1dp" android:bottom="1dp"/>
            <corners android:radius="15dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Left glow effect with rounded corners -->
    <item android:right="10dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#0d6efd"
                android:centerColor="#0d6efd"
                android:endColor="@android:color/transparent"
                android:type="linear"/>
            <corners android:radius="15dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Right glow effect with rounded corners -->
    <item android:left="10dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#0d6efd"
                android:centerColor="#0d6efd"
                android:endColor="@android:color/transparent"
                android:type="linear"/>
            <corners android:radius="15dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
